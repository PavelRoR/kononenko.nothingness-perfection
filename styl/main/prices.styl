#prices
	@extends #for
	background-image url(../img/prices_bg.png)
	background-repeat no-repeat
	background-position: center
	background-size: cover
	position relative
	&:before
		content: ''
		display block
		width 100%
		height 100%
		position: absolute
		top 0
		left 0
		right 0
		bottom 0
		background-color: rgba(0,0,0,.55)
		z-index 0
	.container
		position relative
		z-index 9
.packets
	width 100%
	max-width 710px
	margin 0 auto
.packet
	width 100%
	max-width 380px
	margin 0 auto 40px
	background-color rgba(#000, .6)
	border 1px solid purp
	text-align: center
	opacity .9
	padding 20px
	&-head
		padding-bottom: 20px
		&-title
			font-size: 24px
			font-family: Roboto
			small
				display block
				font-size: 16px
	&-body
		padding 20px 0
		border-top: 1px solid #fff
		border-bottom: 1px solid #fff
		min-height 272px
		&-text
			margin-bottom: 10px
			&:nth-of-type(1)
			&:last-of-type
				margin-bottom: 0
	&-footer
		padding-top: 20px
.more-button
	display: inline-block
	font-size: 14px
	color #aaa
	border-bottom: 1px dotted
	cursor pointer
	margin-bottom: 10px
.cost
	font-size: 22px
	margin-bottom: 15px
	span
		display block
		font-size: 26px
		font-family: SansB
	&-full
		span
			text-decoration: line-through
	&-sale
		color yellow
	&-today
		color purp
.timer-title
	font-size: 26px
	font-family: Roboto
	text-align: center
	margin-bottom: 20px
.alert-danger
	color: #a94442;
	background-color: #f2dede;
	padding: 10px;
	width 100%
	max-width 360px
	margin 20px auto 0
	border: 1px solid #ebccd1;
	border-radius: 4px;
	font-size: 22px;
	text-align: center
.flip-clock-wrapper
	width: 100%
	max-width 460px
.flip-clock-divider .flip-clock-label
	color #fff
.flip-clock-dot
	background-color: #000 + 10%
.flip-clock-wrapper ul li a div div.inn
	color: #fff
	background-color: #000 + 15%