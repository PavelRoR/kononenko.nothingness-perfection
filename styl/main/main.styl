#main
	padding 0 0 60px
	background-image url(../img/main_bg.webp)
	background-repeat no-repeat
	background-position: center
	background-size: cover
	position relative
	text-align: center
	&:before
		content: ''
		display block
		width 100%
		height 100%
		position: absolute
		top 0
		left 0
		right 0
		bottom 0
		background-color: rgba(0,0,0,.75)
		z-index 0
	.container
		position relative
		z-index 9
header
	padding 20px 0
	overflow hidden
	margin-bottom: 30px
#logo
	width 220px
	height 20px
	float left
	background-image url(../img/logo.png)
	background-repeat no-repeat
	background-position: center
	background-size contain
	opacity .6
.contacts
	text-align: right
	float: right
	opacity .6
	line-height: 20px
.contact
	display inline-block
	.fa
		color: purp
		margin 0 5px 0 15px
	span
		font-size: 14px
		vertical-align: bottom
	&:focus
		text-decoration: none
		color: #fff
	&:hover
		text-decoration: underline
		color: #fff
.contact-tel
	.fa
		margin-left: 0
.pre
	color purp
	small 
		display block
		font-size: 65%
.main-title
	font-size: 42px
	font-family: Roboto
	margin 30px 0 40px
	opacity .9
	span
		display block
		&:before
			content: ''
			display block
			height 1px
			width 100%
			max-width 400px
			background-color #fff
			margin 15px auto
.main-info
	padding: 10px
	border: 1px solid purp
	opacity .9
	width 100%
	max-width 360px
	margin 0 auto 40px
.main-info-text
	color purp
	// font-size: 20px
	font-family: SansB
	text-transform: uppercase
	line-height: 1.5
	span
		display block
	&:last-child
		margin-top: 15px