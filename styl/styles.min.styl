Roboto = "RobotoSlab", sans-serif
Sans = "OpenSans", sans-serif
SansB = "OpenSansBold", sans-serif
purp = #BB80FF

@font-face {
	font-family: 'RobotoSlab';
	src: url('../fonts/RobotoSlab.eot');
	src: url('../fonts/RobotoSlab.eot') format('embedded-opentype'),
		 url('../fonts/RobotoSlab.woff2') format('woff2'),
		 url('../fonts/RobotoSlab.woff') format('woff'),
		 url('../fonts/RobotoSlab.ttf') format('truetype'),
		 url('../fonts/RobotoSlab.svg#RobotoSlab') format('svg');
	font-display: fallback;
	font-weight: normal;
	font-style: normal;
}
@font-face {
	font-family: 'OpenSans';
	src: url('../fonts/OpenSans.eot');
	src: url('../fonts/OpenSans.eot') format('embedded-opentype'),
		 url('../fonts/OpenSans.woff2') format('woff2'),
		 url('../fonts/OpenSans.woff') format('woff'),
		 url('../fonts/OpenSans.ttf') format('truetype'),
		 url('../fonts/OpenSans.svg#OpenSans') format('svg');
	font-display: fallback;
	font-weight: normal;
	font-style: normal;
}
@font-face {
	font-family: 'OpenSansBold';
	src: url('../fonts/OpenSansBold.eot');
	src: url('../fonts/OpenSansBold.eot') format('embedded-opentype'),
		 url('../fonts/OpenSansBold.woff2') format('woff2'),
		 url('../fonts/OpenSansBold.woff') format('woff'),
		 url('../fonts/OpenSansBold.ttf') format('truetype'),
		 url('../fonts/OpenSansBold.svg#OpenSansBold') format('svg');
	font-display: fallback;
	font-weight: bold;
	font-style: normal;
}

@import '../css/_css/bootstrap.min.css'
@import '../css/_css/flipclock.min.css'

*
	margin 0
	padding 0
	outline none
body
	color #fff
	font-size: 18px
	font-family: Sans
	background-color: #010103
a
	color: #fefefe
	&:focus
		outline: 0
	&:hover
		text-decoration none
h1,h2,h3,h4,h5,h6
	font-weight normal
	margin 0
button
	border none
section
header
footer
	width 100%
	display block
.video-wrapper
	margin 0 auto
	position relative
	width 100%
	&:before
		content ''
		height 0
		padding-top 56.25%
		display block
	&:after
		content: ''
		display block
		position: absolute
		top: 0
		left 0
		right 0
		width: 100%
		height 70px
	img,
	iframe
		position absolute
		width 100%
		height 100%
		display block
		background-color #fff
		border-radius 3px
		border: 0
		top 0
		left 0
		right 0
		bottom 0
		cursor pointer
.button
	display block
	margin 0 auto
	background-color: purp
	font-family: SansB
	text-align: center
	width 100%
	max-width 250px
	line-height: 55px
	box-shadow: 0 0 12px 7px rgba(255,255,255,.1)
	text-decoration: none
	text-transform: uppercase
	font-size: 20px
	transition:  all .4s linear
	&:focus
		text-decoration: none
		color #fff
	&:hover
		color: #fff
		background-color: purp - 5%
.general-title
	font-size: 28px
	text-align: center
	font-family: Roboto
	margin-bottom: 50px
.general-list
	li
		list-style none
		position relative
		padding-left: 16px
		margin-bottom: 20px
		&:before
			content: ''
			display block
			position: absolute
			top 10px
			left 0
			width 7px
			height 7px
			border-radius: 50px
			background-color: purp
		&:last-child
			margin-bottom: 0

